{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build application",
            "type": "shell",
            "command": "g++",
            "args": ["-g", 
                     "-IC:\\SDKs\\iCue\\include",
                     "-LC:\\SDKs\\iCue\\redist\\x64",
                     "-l'CUESDK.x64_2017'",
                     "-IC:\\SDKs\\cuda10\\include",
                     "-LC:\\SDKs\\cuda10\\lib\\x64",
                     "-lnvml",
                     "-o", "pc-activity-rgb",
                     "main.cpp"],
        },
        {
            "label": "copy dlls",
            "type": "shell",
            "command": "cp",
            "args": [
                "C:\\SDKs\\iCue\\redist\\x64\\CUESDK.x64_2017.dll",
                "."
            ]
        },
        {
            "label": "build",
            "type": "shell",
            "command": "echo Building application...",
            "dependsOn": ["build application", "copy dlls"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}